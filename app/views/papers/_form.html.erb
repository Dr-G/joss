<%= form_for @paper do |f| %>
<div class="form-group">
  <%= render :partial => "shared/errors", :locals => { :object => @paper } if @paper.errors.any? %>
  <%- if paper_types.present? %>
    <dl class="clear full">
      <dt><%= f.label :kind, "Type" %></dt>
      <dt><%= f.select :kind, paper_types %></dt>
    </dl>
  <%- end %>
</div>

<div class="form-group">
  <div class="row">
    <div class="col">
      <%= f.label :title %>
      <%= f.text_field :title, :placeholder => "What's the title of this paper?", :class => "form-control", :disabled => "disabled" %>
    </div>
    <div class="col">
      <%= f.label "Repository Address" %>
      <% if (current_user == @paper.submitting_author) || current_user.admin? %>
        <%= f.text_field :repository_url, :placeholder => "What's the URL of your #{setting(:product)}?", :class => "form-control" %>
      <% else %>
        <%= f.text_field :repository_url, :placeholder => "What's the URL of your #{setting(:product)}?", :class => "form-control", :disabled => "disabled" %>
      <% end %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col">
      <%= f.label "Software Version" %>
      <%= f.text_field :software_version, :placeholder => "e.g. v1.0.0", :class => "form-control" %>
    </div>
    <div class="col">
      <label>Suggested editor.</label>
      <%= f.select(:suggested_editor, options_for_select(Repository.editors), {:include_blank => true, :prompt => "Suggested editor (optional)"}, :class => "form-control", :style => "margin-right: 12px;") %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label "Description" %>
  <%= f.text_area :body, :rows => "7",
    :placeholder => "Please give short (1-2 line) description of your #{setting(:product)}.", :class => 'form-control', :disabled => 'disabled' %>
</div>

<div class="form-actions">
  <%= submit_tag("Update paper", :class => "btn", :id => "author-submit") %>
</div>
<% end %>
